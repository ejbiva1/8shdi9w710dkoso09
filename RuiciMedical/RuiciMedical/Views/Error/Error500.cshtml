@{
    ViewBag.Title = "500 服务器请求出错";
}

<div class="row">
    <div class="col-xs-12">
        <div class="error-container">
            <div class="well">
                <h1 class="grey lighter smaller">
                    <span class="blue bigger-125">
                        <i class="icon-random"></i>
                        500
                    </span>
                    服务器请求出错
                </h1>

                <hr>
                <h3 class="lighter smaller">
                    错误ID:@ViewBag.ErrorId
                </h3>

                <div class="space"></div>

                <div>
                    <h4 class="lighter smaller">请尝试</h4>
                    <ul class="list-unstyled spaced inline bigger-110 margin-15">
                        <li>
                            <i class="icon-hand-right blue"></i>
                            阅读帮助手册
                        </li>

                        <li>
                            <i class="icon-hand-right blue"></i>
                            请记录错误ID并联系管理员修复
                        </li>
                    </ul>
                </div>

                <hr>
                <div class="space"></div>

                <div class="center">
                    <a href="#" class="btn btn-grey" onclick="javascript:window.location.href=window.location.href;">
                        <i class="icon-arrow-up"></i>
                        刷新
                    </a>

                    <a href="/" class="btn btn-primary">
                        <i class="icon-dashboard"></i>
                        首页
                    </a>
                </div>
            </div>
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div>